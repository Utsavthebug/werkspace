{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "target": "es6",
    "baseUrl": ".",
    "types": ["node"],
    "lib": ["esnext"],
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@helpers/*": ["src/helpers/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@interfaces/*": ["src/ts/interfaces/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/ts/types*"],
      "@redux/*": ["src/redux/*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
